<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TextMaker" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="TitleColor" parent="TextColor"/>
    <style name="ImportantTextColor" parent="TextColor"/>

    <style name="Close">
        <item name="android:src">@drawable/close_night</item>
    </style>
    <style name="Exit">
        <item name="android:src">@drawable/exit_night</item>
    </style>

    <style name="LineColor">
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="MainLayout">
        <item name="android:background">@color/black</item>
    </style>
    <style name="MainMenuLayout" parent="TextColor">
        <item name="android:background">@drawable/menu_night</item>
        <item name="android:drawableTint">@color/white</item>
    </style>
    <style name="PickerLayout" parent="TextColor">
        <item name="android:background">@drawable/picker_day</item>
    </style>
    <style name="UpMenuLayout">
        <item name="android:background">@drawable/up_font_night</item>
    </style>
    <style name="DataLayout">
        <item name="android:background">@drawable/main_menu_night</item>
    </style>
    <style name="InputLayout" parent="TextColor">
        <item name="android:background">@drawable/input_night</item>
    </style>
    <style name="RegisterLayout">
        <item name="android:background">@drawable/register_back_night</item>
    </style>
    <style name="TextMenuLayout">
        <item name="android:background">@drawable/text_menu_night</item>
    </style>
    <style name="LogInBackground">
        <item name="android:background">@drawable/login_back_night</item>
    </style>
    <style name="RegisterBackground" parent="TextColor">
        <item name="android:background">@drawable/register_night</item>
    </style>
    <style name="WorkSpaceLayout">
        <item name="android:background">@color/dark_gray</item>
    </style>

</resources>